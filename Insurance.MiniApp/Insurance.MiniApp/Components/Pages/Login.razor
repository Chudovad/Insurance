@page "/login"
@using Insurance.Domain.Models
@using Insurance.MiniApp.Services
@using Microsoft.AspNetCore.Components
@inject IAuthService AuthService
@inject ITokenService TokenService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

@rendermode InteractiveServer

<PageTitle>Вход в личный кабинет</PageTitle>
<MudContainer MaxWidth="MaxWidth.Small" Class="py-8">
    <MudStack Spacing="4" AlignItems="AlignItems.Center">
        <!-- Заголовок -->
        <MudText Typo="Typo.h4" Style="font-weight:600; color:#2d3748;">
            Вход в систему
        </MudText>

        <!-- Форма -->
        <MudPaper Elevation="0" Class="pa-6" Style="width:100%; max-width:420px; border-radius:8px; background-color:#ffffff;">
            <EditForm Model="_model" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <MudStack Spacing="3">
                    <!-- Поле логина -->
                    <MudTextField @bind-Value="_model.Login"
                                  Placeholder="Логин (e-mail, указанный при регистрации)"
                                  Required="true"
                                  RequiredError="Укажите логин"
                                  FullWidth="true"
                                  Variant="Variant.Outlined" /> 

                    <!-- Поле пароля -->
                    <MudTextField @bind-Value="_model.Password"
                                  Placeholder="Пароль"
                                  InputType="@_passwordInput"
                                  Required="true"
                                  RequiredError="Укажите пароль"
                                  FullWidth="true"
                                  Variant="Variant.Outlined"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@(_showPassword? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                                  OnAdornmentClick="TogglePasswordVisibility" />

                    <!-- Кнопка входа -->
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               FullWidth="true"
                               Size="Size.Large"
                               StartIcon="@(_isLoading ? null : Icons.Material.Filled.Login)"
                               Color="Color.Primary"
                               Class="mt-2"
                               Disabled="@_isLoading">
                        @if (_isLoading)
                        {
                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                            <span class="ms-2">Вход...</span>
                        }
                        else
                        {
                            <span>Войти</span>
                        }
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>

        <!-- Ссылки под формой -->
        <MudStack Spacing="2" AlignItems="AlignItems.Center">
            <MudLink Href="/restore/password" Typo="Typo.body1" Color="Color.Inherit">
                Забыли пароль?
            </MudLink>

            <MudStack Spacing="0" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.body1" Color="Color.Inherit">
                    <MudLink Href="/register">Зарегистрируйтесь</MudLink>, если у Вас нет учетной записи.
                </MudText>
            </MudStack>
        </MudStack>
    </MudStack>
</MudContainer>

@code {
    private LoginModel _model = new();
    private bool _showPassword = false;
    private InputType _passwordInput = InputType.Password;
    private bool _isLoading = false;

    private void TogglePasswordVisibility()
    {
        _showPassword = !_showPassword;
        _passwordInput = _showPassword ? InputType.Text : InputType.Password;
    }

    private async Task HandleValidSubmit()
    {
        _isLoading = true;

        try
        {
            var request = new LoginRequest
            {
                Email = _model.Login.Trim(),
                Password = _model.Password
            };

            var result = await AuthService.LoginAsync(request);

            if (result.IsSuccess && result.Data != null)
            {
                // Сохраняем токены в cookies
                await TokenService.SaveTokensAsync(result.Data);

                Navigation.NavigateTo("/profile");
            }
            else
            {
                Snackbar.Add(result.ErrorMessage ?? "Ошибка при входе", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Неожиданная ошибка: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    public class LoginModel
    {
        public string Login { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}