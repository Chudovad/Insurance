@page "/login"

@rendermode InteractiveServer

<PageTitle>Вход в личный кабинет</PageTitle>
<MudContainer MaxWidth="MaxWidth.Small" Class="py-8">
    <MudStack Spacing="4" AlignItems="AlignItems.Center">
        <!-- Заголовок -->
        <MudText Typo="Typo.h4" Style="font-weight:600; color:#2d3748;">
            Вход в систему
        </MudText>

        <!-- Форма -->
        <MudPaper Elevation="0" Class="pa-6" Style="width:100%; max-width:420px; border-radius:8px; background-color:#ffffff;">
            <EditForm Model="_model" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <MudStack Spacing="3">
                    <!-- Поле логина -->
                    <MudTextField @bind-Value="_model.Login"
                                  Placeholder="Логин (e-mail, указанный при регистрации)"
                                  Required="true"
                                  RequiredError="Укажите логин"
                                  FullWidth="true"
                                  Variant="Variant.Outlined" /> 

                    <!-- Поле пароля -->
                    <MudTextField @bind-Value="_model.Password"
                                  Placeholder="Пароль"
                                  InputType="@_passwordInput"
                                  Required="true"
                                  RequiredError="Укажите пароль"
                                  FullWidth="true"
                                  Variant="Variant.Outlined"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@(_showPassword? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                                  OnAdornmentClick="TogglePasswordVisibility" />

                    <!-- Кнопка входа -->
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Outlined"
                               FullWidth="true"
                               Size="Size.Large"
                               StartIcon="@Icons.Material.Filled.Login"
                               Color="Color.Primary"
                               Class="mt-2">
                        Войти
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>

        <!-- Ссылки под формой -->
        <MudStack Spacing="2" AlignItems="AlignItems.Center">
            <MudLink Href="/restore/password" Typo="Typo.body1" Color="Color.Inherit">
                Забыли пароль?
            </MudLink>

            <MudStack Spacing="0" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.body1" Color="Color.Inherit">
                    <MudLink Href="/register">Зарегистрируйтесь</MudLink>, если у Вас нет учетной записи.
                </MudText>
            </MudStack>
        </MudStack>
    </MudStack>
</MudContainer>

@code {
    private LoginModel _model = new();
    private bool _showPassword = false;
    private InputType _passwordInput = InputType.Password;

    private void TogglePasswordVisibility()
    {
        _showPassword = !_showPassword;
        _passwordInput = _showPassword ? InputType.Text : InputType.Password;
    }

    private void HandleValidSubmit()
    {
        // Логика входа
    }

    public class LoginModel
    {
        public string Login { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}