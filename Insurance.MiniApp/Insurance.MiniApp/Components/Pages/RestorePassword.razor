@page "/restore/password"

@rendermode InteractiveServer

<PageTitle>Восстановление пароля</PageTitle>
<MudContainer MaxWidth="MaxWidth.Small" Class="py-8">
    <MudStack Spacing="4" AlignItems="AlignItems.Center">
        <!-- Заголовок -->
        <MudText Typo="Typo.h4" Style="font-weight:600; color:#2d3748;">
            Восстановление пароля
        </MudText>

        <!-- Форма -->
        <MudPaper Elevation="0" Class="pa-6" Style="width:100%; max-width:480px; border-radius:8px; background-color:#ffffff;">
            <EditForm Model="_model" OnValidSubmit="HandleCheckClient">
                <DataAnnotationsValidator />
                <MudStack Spacing="3">
                    <!-- Поле имени пользователя -->
                    <MudTextField @bind-Value="_model.Username"
                                  Placeholder="Имя пользователя"
                                  Required="true"
                                  RequiredError="Укажите имя пользователя"
                                  FullWidth="true"
                                  Variant="Variant.Outlined" />

                    <!-- Кнопка проверки клиента -->
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Outlined"
                               FullWidth="true"
                               Size="Size.Large"
                               StartIcon="@Icons.Material.Filled.Send"
                               Color="Color.Primary"
                               Class="mt-2">
                        Отправить запрос
                    </MudButton>
                </MudStack>
            </EditForm>
        </MudPaper>

        <!-- Ссылка для возврата ко входу -->
        <MudLink Href="/login" Typo="Typo.body1" Color="Color.Inherit">
            Вернуться ко входу
        </MudLink>
    </MudStack>
</MudContainer>

@code {
    private RegisterModel _model = new();

    private void HandleCheckClient()
    {

    }

    public class RegisterModel
    {
        public string Username { get; set; } = string.Empty;
    }
}